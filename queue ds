#include<stdio.h>
#include<stdlib.h>
#define size 5
int front=-1,rear=-1,que[size];
void enqueue()
{
    int ele;
    if(rear==size-1)
        printf("the queue is full or overflown\n");
    else
    {
        printf("Enter the element: ");
        scanf("%d",&ele);
    //is_full();
        if(front==-1 && rear==-1)
        {
            front=0;
            rear=0;
        }
        else
        
            rear=rear+1;
    }
            que[rear]=ele;
           
}
void dequeue()
{
    int ele;
    if(front==-1 &&front==-1)
    {
        printf("the queue is empty\n");
    }
    else
    {
        ele=que[front];
        if(front==rear)
        {
            front=-1;
            rear=-1;
        }
        else
        {
            front=front+1;
        }
        printf("The deleted element is: %d\n",ele);
    }
}

void display()
{
    if(front==-1 &&front==-1)
    {
        printf("the queue is empty\n");
    }
    else
    {
        for(int i=front;i<=rear;i++)
        {
            printf("%d\n",que[i]);
        }
    }
}

int main()
{
    int cho;
    while(1)
    {
        printf("* MAIN MENU *\n");
        printf("\n1.enqueue\n2.dequeue\n3.display\n4.exit\n");
        printf("\n enter a choice");
        scanf("%d",&cho);
        switch(cho)
        {
            case 1:enqueue();
            break;
            case 2:dequeue();
            break;
            case 3:display();
            break;
            case 4:exit(0);
            break;
            default : printf("\nenter number between 1 to 4");
        }
    }
    return 0;
    
}
